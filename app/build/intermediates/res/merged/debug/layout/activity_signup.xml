<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/app_margin"
    android:gravity="center"
    tools:context="com.prekshashukla.firebaseapp.activities.SignupActivity">

    <ImageView
        android:layout_width="@dimen/image_border_size"
        android:layout_height="@dimen/image_border_size"
        android:id="@+id/activity_signup_image"
        android:layout_marginBottom="@dimen/large_margin"
        android:background="@drawable/image_border"/>

    <Button
        android:layout_width="@dimen/image_border_size"
        android:layout_height="@dimen/button_height"
        android:id="@+id/activity_signup_upload_button"
        android:text="@string/upload_image"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/app_margin"
        android:background="@color/colorPrimary"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_username"
        android:hint="@string/username"
        android:inputType="textCapWords"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="@dimen/small_margin"
        android:layout_marginBottom="@dimen/app_margin"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_email"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/small_margin"
        android:layout_marginBottom="@dimen/app_margin"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_signup_password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="@dimen/small_margin"/>

    <Button
        android:layout_width="@dimen/image_border_size"
        android:layout_height="@dimen/button_height"
        android:id="@+id/activity_signup_button"
        android:text="@string/register"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/app_margin"
        android:background="@color/colorPrimary"/>

</LinearLayout>
